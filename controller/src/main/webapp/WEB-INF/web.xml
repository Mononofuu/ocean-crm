<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>CRM Web Application</display-name>

    <servlet>
        <servlet-name>dashboardServlet</servlet-name>
        <servlet-class>com.becomejavasenior.dashboard.DashboardServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>dashboardServlet</servlet-name>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>com.becomejavasenior.access.LoginFilter</filter-class>
    </filter>
    <filter>
        <filter-name>LogoutFilter</filter-name>
        <filter-class>com.becomejavasenior.access.LogoutFilter</filter-class>
    </filter>

    <filter>
        <filter-name>RoleFilter</filter-name>
        <filter-class>com.becomejavasenior.access.RoleFilter</filter-class>
        <init-param>
            <param-name>roles</param-name>
            <param-value>admin,user</param-value>
        </init-param>
    </filter>
    <filter>
        <filter-name>AdminRoleFilter</filter-name>
        <filter-class>com.becomejavasenior.access.RoleFilter</filter-class>
        <init-param>
            <param-name>roles</param-name>
            <param-value>admin</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>UnauthorizedFilter</filter-name>
        <servlet-name>SignUp</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>UnauthorizedFilter</filter-name>
        <servlet-name>SignIn</servlet-name>
    </filter-mapping>

    <filter-mapping>
        <filter-name>AuthorizedFilter</filter-name>
        <servlet-name>SignOut</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthorizedFilter</filter-name>
        <servlet-name>user</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthorizedFilter</filter-name>
        <servlet-name>admin</servlet-name>
    </filter-mapping>

    <filter-mapping>
        <filter-name>UserFilter</filter-name>
        <servlet-name>user</servlet-name>
    </filter-mapping>

    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <servlet-name>admin</servlet-name>
    </filter-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>


</web-app>